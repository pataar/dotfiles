# Taps
tap "homebrew/core"
tap "homebrew/bundle"
tap "homebrew/services"
tap "homebrew/cask-fonts"

# Make sure apps get installed in system Applications dir
cask_args appdir: '/Applications'

# Install ZSH
brew 'zsh'

# Install GNU core utilities (those that come with MacOS are outdated)
brew 'coreutils'

# Install GNU `find`, `locate`, `updatedb`, and `xargs`, g-prefixed
brew 'findutils'

# Install Binaries
brew 'asdf'
brew 'bash'
brew 'dive'
brew 'git'
brew 'git-cliff'
brew 'git-delta'
brew 'glab'
brew 'htop'
brew 'hub'
brew 'jq'
brew 'mkcert'
brew 'nano'
brew 'nss'
brew 'openssl'
brew 'pygments'
brew 'rsync'
brew 'scrcpy'
brew 'watch'
brew 'wget'
brew 'youtube-dl'

# Install Frontend stuff
brew 'volta'

# Fonts
cask 'font-jetbrains-mono'
cask 'font-jetbrains-mono-nerd-font'

# Apps
cask '1password'
cask 'alfred'
cask 'appcleaner'
cask 'bettertouchtool'
cask 'docker'
cask 'fork'
cask 'google-backup-and-sync'
cask 'google-chrome'
cask 'iterm2'
cask 'itsycal'
cask 'jetbrains-toolbox'
cask 'slack'
cask 'spotify'
cask 'ticktick'
cask 'visual-studio-code'
cask 'whatsapp'

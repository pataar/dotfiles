[core]
	editor = nano
	excludesfile = /Users/pieter/.gitignore_global
[user]
	name = pieter
	email = pieter@interactivestudios.nl
	signingkey = 3EAD8E674CC96B02
[push]
	default = simple
        followTags = true
[gpg]
	program = gpg
[alias]
	git = !exec git
[color]
	ui = true
[pager]
       diff = delta
[diff]
    tool = kdiff3
[difftool "kdiff3"]
    path = /Applications/kdiff3.app/Contents/MacOS/kdiff3
    trustExitCode = false
[merge]
    tool = kdiff3
[mergetool "kdiff3"]
    path = /Applications/kdiff3.app/Contents/MacOS/kdiff3
    trustExitCode = false

[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path =
[mergetool "sourcetree"]
	cmd = /Applications/Sourcetree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
[commit]
	template = /Users/pieter/.stCommitMsg
[pull]
	rebase = false
[trim]
	bases = develop
	protected = acceptance,master
[http]
	postBuffer = 524288000


[delta]
    plus-style = "syntax #012800"
    minus-style = "syntax #340001"
    syntax-theme = Monokai Extended
    navigate = true
    line-numbers = true

[interactive]
    diffFilter = delta --color-only
[maintenance]
	repo = /Users/pieter/.zsh_plugins/fast-syntax-highlighting
	repo = /Users/pieter/.zsh_plugins/git-prune
	repo = /Users/pieter/.zsh_plugins/ohmyzsh
	repo = /Users/pieter/.zsh_plugins/powerlevel10k
	repo = /Users/pieter/.zsh_plugins/ssh-connect
	repo = /Users/pieter/.zsh_plugins/zsh-autosuggestions
